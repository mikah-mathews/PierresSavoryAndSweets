@{
  Layout = "_Layout";
}

@using PierresSavoryAndSweet.Models;

<div class="main">
  <h1>Flavors</h1>
  <div class="main">
    @if (Model.Count == 0)
    {
      <h3>No flavors have been added yet.</h3>
      @Html.ActionLink("Add new flavor", "Create", "Flavors")
    }

    <ul>
      @foreach(Flavor flavor in Model)
      {
        <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId})</li>
      }
    </ul>
  </div>
</div>